mixin formInternacion(action="/asignaciones/asignar")
  h1 Registrar internacion
  br
  form#form-internacion(method="POST", action=action)
    input(type="hidden", name="id_admision", id="id-admision")
    input(type="hidden", id="id-paciente")
    div
      label(for="registro-ala") Ala:
      select(name="id_ala", id="registro-ala", required)
        option(disabled selected value="") -- Seleccione el Ala --
        each ala in alas
          option(value=ala.id_ala)= ala.nombre
    div
      label(for="registro-habitacion") Habitación:
      select(name="id_habitacion", id="registro-habitacion", required)
        option(disabled selected value="") -- Seleccione la habitación --
    div
      button(type="submit") Admitir paciente
      button(type="button", id="cerrar-modal") Cancelar
